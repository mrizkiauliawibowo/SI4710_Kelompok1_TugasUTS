      "name": "üîê 1. SETUP - Login & Authentication",
      "description": "Setup authentication tokens sebelum testing services lain",
      "item": [
        {
          "name": "‚úÖ Health Check - API Gateway",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          },
          "response": []
        },
        {
          "name": "üîì POST - Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.access_token) {",
                  "        pm.environment.set('admin_token', jsonData.access_token);",
                  "        pm.test('‚úÖ Admin token berhasil di-set', function() {",
                  "            pm.expect(pm.environment.get('admin_token')).to.exist;",
                  "        });",
                  "    }",
                  "} else {",
                  "    pm.test('‚ùå Login gagal', function() {",
                  "        pm.expect(pm.response.code).to.equal(200);",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"username\": \"admin\", \"password\": \"admin123\"}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
